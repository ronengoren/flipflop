<div class="container">
  <div class="row">
    <div class="col p-3 mb-2 bg-light text-dark">
      <h1>New message to <%= @receiver.user_name %></h1>

<%= form_for @personal_message do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>
    </div>

  </div>
</div>


